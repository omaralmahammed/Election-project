@model IEnumerable<project5_voting.Models.Ad>

@{
    ViewBag.Title = "advertisementAdmin";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5" dir="rtl">
    <h2 class="text-center mb-4">طلبات الإعلانات</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>اسم المرشح</th>
                    <th>الرقم الوطني</th>
                    <th>شعار الحملة</th>
                    <th>اسم القائمة</th>
                    <th>اسم الحزب</th>
                    <th>الدائرة الانتخابية</th>
                    <th>وصف الحملة</th>
                    <th>صورة المرشح</th>
                    <th>@Html.DisplayNameFor(model => model.status)</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.nationalId)</td>
                        <td>@Html.DisplayFor(modelItem => item.campaignSlagan)</td>
                        <td>@Html.DisplayFor(modelItem => item.listName)</td>
                        <td>@Html.DisplayFor(modelItem => item.partyName)</td>
                        <td>@Html.DisplayFor(modelItem => item.areaName)</td>
                        <td>@Html.DisplayFor(modelItem => item.description)</td>
                        <td>
                            <img src="~/Images/@item.image" alt="No Image" width="100" height="100" class="img-fluid rounded" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.status)</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Action Buttons">
                                @Html.ActionLink("رؤية التفاصيل", "Details", new { id = item.id }, new { @class = "btn btn-info btn-sm" })

                                @if (item.status != "تم نشر الاعلان")
                                {
                                    @Html.ActionLink("نشر", "Publish", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
                                }

                                @Html.ActionLink("حذف", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
