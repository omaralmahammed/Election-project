@model IEnumerable<project5_voting.Models.localCandidate>

@{
    ViewBag.Title = "CandidatesName";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Container Styling */
    /*.container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }*/

    h1 {
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Button Styling */
    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
    }

    .btn-primary {
        background-color: #28a745; /* Green button */
    }

        .btn-primary:hover {
            background-color: #218838; /* Darker green on hover */
        }

    .btn-secondary {
        background-color: #3a7d34; /* Darker green for secondary button */
    }

        .btn-secondary:hover {
            background-color: #2c6b2f; /* Even darker green on hover */
        }

    /* Table Styling */
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden; /* Ensures border-radius is applied */
    }

        .styled-table thead th {
            background-color: #5b8c51; /* Green header */
            color: #fff;
            padding: 12px 15px;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Light grey for even rows */
        }

        .styled-table tbody tr:hover {
            background-color: #e2f2e2; /* Light green for hover effect */
        }

        .styled-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        .styled-table th, .styled-table td {
            font-size: 24px;
        }
</style>


<div class="container" , style="text-align: center;">
    <h2>اسماء المرشحين المحليين</h2>



    <table class="styled-table" style="text-align: right; ">
        <thead style="text-align: right;">
            <tr>


                <th style="text-align:center;">صورة المترشح</th>
                <th>نوع الكرسي</th>
                <th>اسم القائمة</th>
                <th>اسم المرشح</th>

            </tr>
        </thead>
        <tbody style=" text-align: right; ">
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;"><img src="~/image1/@item.img" alt="Alternate Text" style="width:70px;"/></td>
                    <td>@Html.DisplayFor(modelItem => item.typeOfChair)</td>
                    <td>@Html.DisplayFor(modelItem => item.listName)</td>
                    <td>@Html.DisplayFor(modelItem => item.candidateName)</td>

                </tr>
            }
        </tbody>
    </table>
</div>