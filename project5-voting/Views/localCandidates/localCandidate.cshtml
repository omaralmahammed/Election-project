        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control-lg {
        border: 2px solid forestgreen;
        padding: 15px;
        font-size: 1.1rem;
        color: #495057;
    }

    .btn-success {
        background-color: forestgreen;
        border-color: green;
    }

        .btn-success:hover {
            background-color: forestgreen;
            border-color: green;
        }

    .btn-animate {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-animate:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .table-responsive {
        overflow-x: auto;
    }

    .table {
        margin-bottom: 0;
        direction: rtl;
        text-align: right;
    }

        .table th, .table td {
            text-align: right;
            vertical-align: middle;
        }

    .img-fluid {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }

    .card {
        border-radius: 15px;
        background: #ffffff;
        padding: 30px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-gradient {
        background: linear-gradient(90deg, #fb2345 0%, #198754 100%);
        color: white;
        border: none;
        padding: 10px 30px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #198754 0%, #fb2345 100%);
            transform: scale(1.05);
        }
</style>
