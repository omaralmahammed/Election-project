@model project5_voting.Models.PartyList

@{
    ViewBag.Title = "إنشاء قائمة الحزب";
}

<div class="container mt-5" style="direction: rtl; text-align: right;">
    <h2 class="text-center mb-4">إنشاء قائمة الحزب</h2>

    <div class="row">
        <!-- عمود النموذج -->
        <div class="col-md-6 order-md-1 order-2">
            @using (Html.BeginForm("Createuser", "party", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal p-5 rounded shadow-sm bg-white">
                    <h4 class="mb-3 text-primary">إدخال اسم الحزب</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.partyName, "اسم الحزب", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.partyName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.partyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.partyImage, "اختر صورة الحزب", htmlAttributes: new { @class = "form-label" })
                        <input type="file" name="PartyImage" class="form-control" />
                        @Html.ValidationMessageFor(model => model.partyImage, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="إنشاء" class="btn btn-success btn-animate w-50" />
                    </div>
                </div>
            }
        </div>

        <!-- عمود الصورة -->
        <div class="col-md-6 order-md-2 order-1 mb-4 mb-md-0">
            <img src="~/images/img1.jpg" class="img-fluid rounded shadow-sm" alt="صورة تعبيرية" />
        </div>
    </div>
</div>

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    h2 {
        font-weight: bold;
        color: green;
    }

    .form-horizontal {
        background-color: #ffffff; /* خلفية بيضاء */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: forestgreen;
    }

    .btn-primary {
        background-color: forestgreen;
        border-color: green;
    }

        .btn-primary:hover {
            background-color: forestgreen;
            border-color: green;
        }

    .btn-animate {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-animate:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .img-fluid {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
