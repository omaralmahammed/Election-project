        margin-left: 5px;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f4f8;
        transform: translateY(-5px);
        transition: transform 0.2s ease-in-out;
    }

    .table img {
        height: 50px;
        width: 50px;
        object-fit: cover;
        border-radius: 50%;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-secondary {
        background-color: #6c757d;
    }

    .btn-group .btn {
        margin-left: 5px;
        transition: transform 0.3s ease;
    }

        .btn-group .btn:hover {
            transform: scale(1.05);
        }

    .sortable {
        cursor: pointer;
    }

        .sortable .sort-icon {
            font-size: 0.8rem;
            margin-right: 5px;
        }

    thead.thead-dark {
        background-color: #2c3e50; /* Navy blue color */
        color: white;
    }

    keyframes fadeIn {
        to

    {
        opacity: 1;
    }
